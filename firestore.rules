rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자 인증 확인 함수
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users 컬렉션 (문서 ID는 username)
    // 간단한 규칙: 인증된 사용자는 대부분 작업 가능
    match /users/{username} {
      // 로그인을 위해 users 컬렉션은 누구나 읽을 수 있어야 함
      allow read, list: if true;
      // 생성: 인증된 사용자 (관리자가 사용자 추가)
      allow create: if isAuthenticated();
      // 업데이트: 인증된 사용자 (lastLogin, 사용자 정보 수정 등)
      allow update: if isAuthenticated();
      // 삭제: 인증된 사용자 (관리자가 사용자 삭제)
      allow delete: if isAuthenticated();
    }
    
    // 관리자 권한 확인 함수 (클라이언트 측에서 체크)
    function isAdmin() {
      return isAuthenticated();
    }
    
    // 생산업체 권한 확인 함수 (클라이언트 측에서 체크)
    function isSupplier() {
      return isAuthenticated();
    }
    
    // 본인 또는 관리자 확인 함수 (클라이언트 측에서 체크)
    function isOwnerOrAdmin(userId) {
      return isAuthenticated();
    }
    
    // Suppliers 컬렉션
    match /suppliers/{supplierId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Orders 컬렉션
    match /orders/{orderId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAdmin() || 
                      (isSupplier() && 
                       get(/databases/$(database)/documents/orders/$(orderId)).data.supplierId == request.auth.uid);
      allow delete: if isAdmin();
    }
    
    // Processes 컬렉션
    match /processes/{processId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Evidences 컬렉션 (증빙자료 메타데이터)
    match /evidences/{evidenceId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwnerOrAdmin(resource.data.uploadedBy);
      allow delete: if isOwnerOrAdmin(resource.data.uploadedBy);
    }
  }
}
